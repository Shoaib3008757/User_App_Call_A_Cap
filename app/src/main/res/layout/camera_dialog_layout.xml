<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/camera_dialog_border"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="Choose Option"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#60000000"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout_open_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60">

            <TextView
                android:id="@+id/txt_open_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="Open Camera"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_open_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60">

            <TextView
                android:id="@+id/txt_open_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="Gallery"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_open_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="Cancel"
                android:layout_centerInParent="true"
                android:textColor="@color/heading_truck_type"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>